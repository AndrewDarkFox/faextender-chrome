{
    "env": {
        "es6": true,
        "browser": true,
        "webextensions": true,
        "jquery": true,
        "node": true
    },
    "extends": ["eslint:recommended", "google"],
    "rules": {
        "indent": ["error", 4],
        "quotes": ["error", "double"],
        "semi": ["error", "always"],
        "linebreak-style": "off", // temp
        "require-jsdoc": "off", //"warn",
        "eqeqeq": "error",
        "comma-dangle": "off",
        "one-var": ["error", {"initialized": "never", "uninitialized": "always"}],
        "max-len": "off"
    }
}